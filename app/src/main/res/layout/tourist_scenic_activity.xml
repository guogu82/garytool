<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/tourist_bar"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/iv_scenic"
            android:background="@drawable/tourist_error_page_404"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="清晖园"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="国家AAAA级旅游景区，中国十大名园、广东四大名园之一，现系省级文物保护单位，地处顺德大良清晖路。"
            android:gravity="left"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:background="@color/blackWithA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <ListView
        android:id="@+id/lv_scenic"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"></ListView>
</LinearLayout>