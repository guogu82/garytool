<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 <TextView
     android:text="Spinner"
     android:textSize="50sp"
     android:textColor="@color/black"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" />
 <TextView
     android:text="最原始的Spinner"
     android:textSize="30sp"
     android:textColor="@color/black"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" />
 <Spinner
     android:id="@+id/spinner_normal"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"></Spinner>
 <TextView
     android:text="只改变了文本框的Spinner"
     android:textSize="30sp"
     android:textColor="@color/black"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" />
 <Spinner
     android:id="@+id/spinner_one"
     android:spinnerMode="dialog"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:background="@color/whiteWithA"></Spinner>
 <TextView
     android:text="利用selector设置背景的Spinner"
     android:textSize="30sp"
     android:textColor="@color/black"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" />
 <Spinner
     android:id="@+id/spinner_two"
     android:layout_width="match_parent"
     android:layout_height="80dp"
     style="@style/function_spinner_style"
     ></Spinner>
</LinearLayout>