<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.gary.garytool.business.puzzle.PuzzleLayout
        android:id="@+id/puzzle"
        android:layout_centerInParent="true"
        android:padding="3dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    </com.gary.garytool.business.puzzle.PuzzleLayout>
    <RelativeLayout
        android:layout_above="@+id/puzzle"
        android:layout_margin="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_level"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#ea7821"
            android:background="@drawable/shape_puzzle_tv"
            android:gravity="center"
            android:text="1"
            android:padding="4dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <TextView
            android:id="@+id/tv_time"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#ea7821"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_puzzle_tv"
            android:gravity="center"
            android:text="120"
            android:padding="4dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="3dp"
        android:layout_below="@+id/puzzle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_answer"
            android:background="@drawable/arrow_left_n"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <Button
            android:layout_centerVertical="true"
            android:onClick="onChoseAnswer"
            android:id="@+id/bt_chose_answer"
            android:text="选择图片"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>