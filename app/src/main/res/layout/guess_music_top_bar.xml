<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/guess_music_index_bar">

<ImageButton
    android:id="@+id/bt_bar_back"
    android:layout_marginLeft="10dp"
    android:layout_centerVertical="true"
    android:background="@drawable/selector_guess_music_back_button_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <FrameLayout
        android:id="@+id/layout_bar_coin"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/bt_bar_add_coins"
            android:background="@drawable/selector_guess_music_coin_button_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="35dp"
            android:background="@drawable/guess_music_game_coin_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_bar_coins"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="15dp"
            android:text="1000"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
</RelativeLayout>

