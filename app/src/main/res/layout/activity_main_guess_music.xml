<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Frame 1-->
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/guess_music_index_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--top bar-->
        <include layout="@layout/guess_music_top_bar"></include>
        <!-- 盘片 -->
        <include layout="@layout/guess_music_pan_layout"></include>
        <!-- 文字框 -->
        <include layout="@layout/guess_music_name_select"></include>
    </LinearLayout>
    <!--浮动按钮-->
    <include layout="@layout/guess_music_float_buttons"></include>

    <!--答案正确界面-->
    <include layout="@layout/guess_music_answer_right"></include>
</FrameLayout>
