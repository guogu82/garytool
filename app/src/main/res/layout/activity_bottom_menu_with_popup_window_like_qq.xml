<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gary.garytool.BottomMenuWithPopupWindowLikeQQ">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fl_ment"
        android:layout_alignParentTop="true"></FrameLayout>

    <FrameLayout
        android:id="@+id/fl_ment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/skin_tabbar_bg"
            android:orientation="horizontal">
            <!-- 动态-->
            <FrameLayout
                android:id="@+id/fl_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:src="@drawable/selector_skin_tabbar_icon_auth" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="动态"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </FrameLayout>
            <!-- 与我相关-->
            <FrameLayout
                android:id="@+id/fl_auth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_auth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:src="@drawable/selector_skin_tabbar_icon_at" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="与我相关"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </FrameLayout>
            <!-- 留白-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"></FrameLayout>

            <!-- 我的空间-->
            <FrameLayout
                android:id="@+id/fl_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:src="@drawable/selector_skin_tabbar_icon_space" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="我的空间"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </FrameLayout>
            <!-- 玩吧-->
            <FrameLayout
                android:id="@+id/fl_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:src="@drawable/selector_skin_tabbar_icon_more" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="玩吧"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black"></LinearLayout>
    </FrameLayout>

    <!-- 中间按钮背景-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_toggle"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_alignTop="@+id/fl_ment"
        android:src="@drawable/skin_tabbar_btn"/>

    <!-- 中间按钮背景-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_plus"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_alignTop="@+id/fl_ment"
        android:src="@drawable/selector_skin_tabbar_icon"/>
</RelativeLayout>
